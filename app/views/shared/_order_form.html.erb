<% if current_user.orders.count==0 %>
  <%= form_with(model: Order.new, local: true) do |f| %>
    <%= f.submit "Start a New Order", class: "btn btn-primary" %>
  <% end %>
<% elsif current_user.orders.last.paid == true %>
  <%= form_with(model: Order.new, local: true) do |f| %>
    <%= f.submit "Start a New Order", class: "btn btn-primary" %>
  <% end %>
<% else %>
  <%= link_to "Keep Ordering", services_path, :class => "btn btn-info" %> 
<%end%>
  