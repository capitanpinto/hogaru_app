<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.services.any? %>
      <h3>Services (<%= @user.services.count %>)</h3>
      <ol class="services">
        <%= render @services %>
      </ol>
    <% end %>
  </div>